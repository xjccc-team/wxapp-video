      <view class="user-info">
        <image class="avatar" src="{{userinfo.avatarUrl}}" />
        <view class="name">{{userinfo.nickname}}</view>
      </view>
      <block wx:if="{{videoList.length}}">
        <view class="video-list" wx:for="{{videoList}}">
          <view class="left">
            <!-- <image src="../images/user-top.png" /> -->
            <video class="video" initial-time="0" object-fit="cover" autoplay='{{true}}'  src="{{item.videoSrc}}" controls></video>
          </view>
          <view class="right">
            <view class="prise">{{item.praise||'--'}}</view>
            <view class="content" wx:if="{{item.status==0}}">审核中……</view>
            <view class="content" wx:if="{{item.status==1}}">审核通过，已发布</view>
            <view class="content" wx:if="{{item.status==2}}">{{item.refuseReason}}}</view>
            <view class="time">{{item.time}}</view>
          </view>
        </view>
      </block>

       <block wx:if="{{!videoList.length && videoNow.tempFilePath}}">
        <view class="video-list" >
          <view class="left">
            <video class="video" object-fit="cover" initial-time="0" autoplay='{{true}}'  src="{{videoNow.tempFilePath}}" controls></video>
          </view>
          <view class="right">
            <view class="submit" @tap="uploadSubmit">提 交</view>
          </view>
        </view>
      </block>

      <view wx:if="{{!videoList.length && !videoNow.tempFilePath}}" class="video-list no-video" @tap="choseVideo">
        <image src="../images/canma-select.png" />
        <text class="des">上传你的视频</text>
      </view>
      <view wx:if="{{!videoList.length && !videoNow.tempFilePath}}" class="no-video-text">还没有完成加油视频录制哦</view>
    </scroll-view>
    <!-- 模拟tabbar -->
   <tabBars active="2"></tabBars> 
  </view>
