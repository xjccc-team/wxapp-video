<script>
  import wepy from 'wepy'
  import testMixin from '../mixins/test'
  // 引入connect连接器
  import { connect } from 'wepy-redux'
  import XHR from '../api/'
  import TabBars from '../components/tabBars'

  @connect({
    videoNow (state) {
      return state.counter.videoNow
    },
    userinfo (state) {
      return state.counter.userinfo
    }
  })
  
  export default class User extends wepy.page {
    config = {
      navigationBarTitleText: '我的',
      navigationStyle: 'custom'
    }
    components = {
      tabBars: TabBars
    }
    mixins = [testMixin]
    data = {
      imageSrc: '',
      status: null,
      refuseReason: '',
      disabledStatus: false,
      videoHeight: '',
      objectFit: 'contain',
      videoList: []
    }
    computed = {
    }
    methods = {
      choseVideo () {
        wx.chooseVideo({
          sourceType: ['album', 'camera'],
          maxDuration: 12,
          camera: 'back',
          success: (res) => {
            if (res.duration > 12) {
              this.showToast('视频超过12s')
            } else {
              wepy.$store.dispatch({ type: 'VIDEONOW', payload: res })
            }
          }
        })
      },
      uploadSubmit() {
        wx.showLoading({
          title: '上传中，请稍后'
        })
        wx.uploadFile({
          url: 'https://www.wingstechnology.cn/api-server/video/upload', // 仅为示例，非真实的接口地址
          filePath: this.videoNow.tempFilePath,
          name: 'files',
          formData: {
            'type': 'video',
            openId: this.$parent.globalData.openid,
            duration: this.videoNow.duration
          },
          success: (res) => {
            const data = JSON.parse(res.data)
            wx.hideLoading()
            if (data.status === 3002) {
              let json = {
                videoSrc: this.videoNow.tempFilePath,
                status: 0,
                time: ''
              }
              this.videoList.push(json)
              this.$apply()
              this.showToast('上传完成审核中')
            } else {
              wx.showToast({ title: data.message, icon: 'none' })
            }
          }
        })
      }
    }
  
    events = {
      'index-emit': (...args) => {
        console.log(args)
      }
    }
  
    downloadImg() {
      wx.showLoading({
        title: '下载中'
      })
      const time = +new Date()
      wx.downloadFile({
        url: `${this.videoSrc}?time=${time}`, // 仅为示例，并非真实的资源
        success: (res) => {
          if (res.statusCode === 200) {
            this.saveVideo(res.tempFilePath)
          }
        }
      })
    }
    saveVideo(filePath) {
      wx.saveVideoToPhotosAlbum({
        filePath: filePath,
        success: res => {
          wx.hideLoading()
          this.showToast('下载成功')
        },
        fail: res => {
          wx.hideLoading()
          console.log(res)
        }
      })
    }
    getVideoInfo() {
      wx.showLoading({
        title: '加载中，请稍后'
      })
      XHR.videoInfo({
        openId: this.$parent.globalData.openid
      }).then(res => {
        wx.hideLoading()
        let {data, status} = res.data
        if (status === 0) {
          this.videoList = data
          this.$apply()
        }
      })
    }
    playStart() {
      this.objectFit = 'cover'
    }
    onLoad () {
      console.log(this.$parent.globalData.openid)
      this.getVideoInfo()
    }
  }
</script>
